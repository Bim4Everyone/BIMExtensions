<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		ShowInTaskbar="False"
        Title="Выделенные элементы"
		WindowStartupLocation="CenterScreen"
		HorizontalContentAlignment="Center" Height="150" Width="350" MaxWidth= "375" MinWidth= "375" MinHeight="150" MaxHeight ="150">
    <Window.Resources>
        <Style x:Key="ClearButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="10,20">

        <StackPanel Orientation="Vertical">
            <Button x:Name="check" Content="Фильтрация выделенных элементов" Width="300" Height="25" FontSize="14"
						Click="check_select" Margin="10,10,0,0"/>
            <Button x:Name="uncheck" Content="Фильтрация всех элементов в проекте" Width="300" Height="25" FontSize="14"
						Click="uncheck_select" Margin="10,10,0,0"/>
        </StackPanel>

    </StackPanel>
</Window>
